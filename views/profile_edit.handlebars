<div id="from">

    <h2 class="peoplesign"> Edit your profile: </h2>

    <form action="/profile_edit" method= "POST">
        <input type="text" placeholder="First Name" name="first" value="{{user/first}}">
        <input type="text" placeholder="Last Name" name="last" value="{{user/last}}" >
        <input type="text" placeholder="Email" name="email" value="{{user/email}}">
        <input type="text" placeholder="Age" name="age" value="{{user/age}}">
        <input type="text" placeholder="City" name="city" value="{{user/city}}">
        <input type="text" placeholder="Homepage" name="homepage" value="{{user/homepage}}">
        <button type="Submit">Update</button>
    </form>
    
</div>
